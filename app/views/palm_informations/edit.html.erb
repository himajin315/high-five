<div class="inner cover">
  <h1 class="cover-heading"><%= image_tag @user.picture.url, style: 'height: 200px' %></h1>
  <p class="lead">
    <%= form_for([@user, @palm_information], html: { method: :patch }) do |f| %>
      <%= f.label :type, "感情線の長さ"%>
      <%= render partial: "radio_button", locals: { name: "feeling_length", list: ['感:短　い', '感:普　通', '感:長　い'], color: 'btn-warning' } %>
      <%= f.label :type, "感情線の傾き"%>
      <%= render partial: "radio_button", locals: { name: "feeling_slope", list: ['感:小さい', '感:普　通', '感:大きい'], color: 'btn-warning' } %>
      <%= f.label :type, "頭脳線の長さ"%>
      <%= render partial: "radio_button", locals: { name: "knowledge_length", list: ['頭:短　い', '頭:普　通', '頭:長　い'], color: 'btn-info' } %>
      <%= f.label :type, "頭脳線の傾き"%>
      <%= render partial: "radio_button", locals: { name: "knowledge_slope", list: ['頭:小さい', '頭:普　通', '頭:大きい'], color: 'btn-info' } %>
      <%= f.label :type, "運命線の傾き"%>
      <%= render partial: "radio_button", locals: { name: "fate_slope", list: ['運:左　側', '運:中　央', '運:右　側'], color:'btn-danger' } %>

      <%= f.submit '確定', class: 'btn btn-lg btn-primary' %>
    <% end %>
  </p>
</div>
